<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_monster"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#8BC34A"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:contentPadding="5dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/containLayout"
        android:padding="15dp">

        <ImageView
            android:id="@+id/cpt_monsterImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="48dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="255dp" />

        <TextView
            android:id="@+id/cpt_monsterName"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="25dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@+id/cpt_monsterImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cpt_monsterPV"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="24dp"
            app:layout_constraintRight_toLeftOf="@+id/cpt_monsterImage"
            app:layout_constraintTop_toBottomOf="@+id/cpt_monsterName" />

        <TextView
            android:id="@+id/cpt_monsterPA"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="24dp"
            app:layout_constraintRight_toLeftOf="@+id/cpt_monsterImage"
            app:layout_constraintTop_toTopOf="@id/cpt_monsterPV" />

        <TextView
            android:id="@+id/cpt_monsterPM"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="24dp"
            app:layout_constraintRight_toLeftOf="@+id/cpt_monsterImage"
            app:layout_constraintTop_toTopOf="@id/cpt_monsterPA" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>